<h1 class="text-center">order Checkout</h1>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Checkout Form</h4>
                </div>
                <div class="card-body">
                    <form action="/deliver/checkout" method="POST">
                        <div class="form-group row">
                            <label class="col-4 col-md-3 col-form-label">
                                <b>First Name</b>
                            </label>
                            <div class="col-8 col-md-5">
                                <input type="text" name="fname" class="form-control" id="articleURLko" placeholder="First Name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-4 col-md-3 col-form-label">
                                <b>Last Name</b>
                            </label>
                            <div class="col-8 col-md-5">
                                <input type="text" name="lname" class="form-control" id="articleURLko" placeholder="Surname">

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-4 col-md-3 col-form-label">
                                <b>Phone Number</b>
                            </label>
                            <div class="col-8 col-md-5">
                                <input type="number" name="phone" class="form-control" id="articleURLko" placeholder="Phone Number">

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-4 col-md-3 col-form-label">
                                <b>Email</b>
                            </label>
                            <div class="col-8 col-md-5">
                                <input type="email" name="email" class="form-control" id="articleURLko" placeholder="Email">

                            </div>
                        </div>
                        
                         <div class="form-group row">
                            <label for="exampleFormControlSelect2" class="col-4 col-md-3 col-form-label"><b>Delivery Time Collection Time</b></label> 
                            <div class="col-8 col-md-5">
                               <select class="form-control"  name="deliveryTime"id="exampleFormControlSelect2">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                              </select> 
                            </div>                     
                        </div>
                         <div class="form-group row">
                            <label for="exampleFormControlTextarea1" class="col-4 col-md-3 col-form-label"><b>Food Note</b></label>
                            <div class="col-8 col-md-5">
                                <textarea class="form-control" name="foodNote" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                        </div>
                         <div class="form-group row">
                            <label for="exampleFormControlTextarea1" class="col-4 col-md-3 col-form-label"><b>Delivery Note</b></label>
                            <div class="col-8 col-md-5">
                                <textarea class="form-control" name="deliveryNote" id="exampleFormControlTextarea1" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-4 col-md-3 col-form-label">
                                <b>Voucher</b>
                            </label>
                            <div class="col-8 col-md-5">
                                <input type="text"  name="voucher" class="form-control" id="articleURLko" placeholder="Enter Voucher Code">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-4 col-md-3 col-form-label">
                                <b>Enter Pin-Code</b>
                            </label>
                            <div class="col-8 col-md-5">
                                <input type="number"  name="pinCode" class="form-control" id="articleURLko" placeholder="Enter Pin Code">
                            </div>
                        </div>
                         
                         <div class="form-group row">
                            <div class="col-4 col-md-3">
                             <b>  Delivery Charge </b>  
                            </div>                           
                            <div class="col-8 col-md-5 form-check">
                             <label class="form-check-label">
                                <input class="form-check-input" type="radio"  name="deliveryCost" id="inlineRadio1" value="{{totalPrice}}" checked > 
                                  <span class="badge badge-pill badge-success"><b> <i class="fa fa-eur" aria-hidden="true"></i> 00 </b>
                                  </span>  
                             </label>
                            </div>
                         </div>

                         <div class="form-group row">
                            <div class="col-4 col-md-3">
                             <b>  Total Cost </b>  
                            </div>                           
                            <div class="col-8 col-md-5 form-check">
                             <label class="form-check-label">
                                <input class="form-check-input" type="radio"  name="totalPriceCost" id="inlineRadio1" value="{{totalPrice}}" checked > 
                                  <span class="badge badge-pill badge-info"><b> <i class="fa fa-eur" aria-hidden="true"></i> {{totalPrice}} </b>
                                  </span>  
                             </label>
                            </div>
                         </div>                        

                        <div class="form-group row text-center">
                                <div class="offset-sm-2 col-sm-10">
                                    <button type="submit" class="btn btn-outline-success mx-2"> Submit </button>
                                    <button type="reset" class="btn btn-outline-info mx-2"> Reset </button>
                                </div>
                            </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>